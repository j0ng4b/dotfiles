# Get editor completions based on the config schema
"$schema" = 'https://starship.rs/config-schema.json'


add_newline = true
palette = 'base16'

## Prompts format
format = """
$username$hostname$directory($git_branch)$custom
$character
"""

right_format = """
$cmd_duration
"""


[character]
error_symbol = '[🭧🭒](fg:base08)[ ✗ ](bg:base08 fg:base00)[](fg:base08)'
success_symbol = '[🭧🭒](fg:base01)[ ➜ ](bg:base01 fg:base05)[](fg:base01)'


[username]
style_user = 'bg:base01 fg:base05'
style_root = 'base08 bold'

format = '[🭃](fg:base01)[  $user]($style)'

disabled = false
show_always = true


[hostname]
ssh_only = false
format =  '[@$hostname ](bg:base01 fg:base05)[ ](bg:base02 fg:base01)'
trim_at = '.companyname.com'
disabled = false


[directory]
home_symbol = ''
read_only = '  '

truncate_to_repo = true
truncation_length = 4
truncation_symbol = './'

style = 'bg:base02 fg:base05'
format = '[$path ]($style)'

[directory.substitutions]
'/' = '  '

'Documents' = ''
'Documentos' = ''

'Downloads' = ''

'Music' = ''
'Músicas' = ''

'Pictures' = ''
'Imagens' = ''


[git_branch]
symbol = '🌱 '

style = 'bg:base03 fg:base05'
format = '[ ](bg:base03 fg:base02)[on $symbol]($style)[$branch(:$remote_branch) ](bg:base03 fg:base11 bold)'

truncation_length = 6
truncation_symbol = '…'


[cmd_duration]
min_time = 0
format = '[🬈🬖🬥🬅 ](bg:base10 fg:base00)[took $duration](bg:base10 fg:base00)[ 🬖🬥🬔🬗](bg:base10 fg:base00)'


[custom.end_prompt]
when = true
format = '[ 🬖🬥🬔🬗](bg:prev_bg fg:base00)'


# Disable the package module, hiding it from the prompt completely
[package]
disabled = true


[palettes.base16]
base00 = '#{base00}'
base01 = '#{base01}'
base02 = '#{base02}'
base03 = '#{base03}'
base04 = '#{base04}'
base05 = '#{base05}'
base06 = '#{base06}'
base07 = '#{base07}'
base08 = '#{base08}'
base09 = '#{base09}'
base10 = '#{base0A}'
base11 = '#{base0B}'
base12 = '#{base0C}'
base13 = '#{base0D}'
base14 = '#{base0E}'
base15 = '#{base0F}'


