[delta "colors"]
    # General appearance
	dark = true
	syntax-theme = colors

    # Blame
    blame-code-style = syntax
	blame-palette = "#{base01} #{base00} #{base02} #{base03}"
    blame-format = "{author:>18} ({commit:>8}) {timestamp:<13} "

    # Commit hash
	commit-decoration-style = "#{base04}" bold box ul

    # File
	file-decoration-style = "#{base04}"
    file-added-label = [+]
    file-copied-label = [==]
    file-modified-label = [*]
    file-removed-label = [-]
    file-renamed-label = [->]
	file-style = "#{base05}"

    # Hunk headers
    # hunk-header-style = omit
	hunk-header-decoration-style = "#{base04}" box ul
	hunk-header-file-style = bold
	hunk-header-line-number-style = bold "#{base05}"
	hunk-header-style = file line-number syntax

    # Line numbers
	line-numbers-left-style = "#{base04}"
	line-numbers-minus-style = bold "#{base08}"
	line-numbers-plus-style = bold "#{base0B}"
	line-numbers-right-style = "#{base04}"
	line-numbers-zero-style = "#{base04}"
    line-numbers-left-format = " {nm:>3} │"
    line-numbers-right-format = " {np:>3} │"

    # Diff contents
    inline-hint-style = syntax

    minus-style = syntax "#330011"
    minus-emph-style = syntax "#80002a"
    minus-non-emph-style = syntax auto

    plus-style = syntax "#001a00"
    plus-emph-style = syntax "#003300"
    plus-non-emph-style = syntax auto

    whitespace-error-style = "#{base08}" reverse

    # Merge conflicts
    merge-conflict-begin-symbol = ⌃
    merge-conflict-end-symbol = ⌄
    merge-conflict-ours-diff-header-style = "#{base0A}" bold
    merge-conflict-theirs-diff-header-style = "#{base0A}" bold overline
    merge-conflict-ours-diff-header-decoration-style = ''
    merge-conflict-theirs-diff-header-decoration-style = ''

