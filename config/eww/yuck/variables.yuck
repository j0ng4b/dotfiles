;; Clock widget
(defpoll hour
  :interval '1s'
  'date +"%H"'
)

(defpoll minute
  :interval '1s'
  'date +"%M"'
)


;; battery widget
(defpoll battery
  :interval '100ms'
  :initial '{ "enable": 0 }'
  'scripts/scripter battery status'
)

