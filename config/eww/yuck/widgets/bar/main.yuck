      :space-evenly false
      (eventbox
        :cursor 'pointer'
        :onclick 'rofi -show drun -terminal footclient'
        :class 'menu-button'
        (label
          :class 'icon'
          :text 'ïŒ®'
        )
      )
    )
    (box
