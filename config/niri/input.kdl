input {
    keyboard {
        numlock
        track-layout "window"

        xkb {
            layout "br,us"
            variant ",altgr-intl"
        }
    }

    touchpad {
        tap
        dwt
        natural-scroll
    }

    // move focus when mouse moves
    focus-follows-mouse max-scroll-amount="0%"

    // repeating workspace command switch back to prior workspace
    workspace-auto-back-and-forth
}

